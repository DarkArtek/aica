# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{js,json}]
indent_size = 2
[*.{html,less}]
indent_size = 4
[*.{md,markdown}]
trim_trailing_whitespace = false